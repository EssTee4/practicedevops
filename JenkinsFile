pipeline {
    agent any

    environment {
        IMAGE_NAME = "practicedevops"
    }

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/EssTee4/practicedevops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t ${env.IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop and remove container if exists (Windows-compatible)
                    bat '''
                    docker ps -q -f name=practicedevops > nul 2>&1
                    if not errorlevel 1 (
                        docker stop practicedevops
                        docker rm practicedevops
                    )
                    '''

                    // Run container
                    bat "docker run -d -p 8081:80 --name practicedevops ${env.IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        success { echo '✅ Build & Run successful!' }
        failure { echo '❌ Build failed. Check logs.' }
    }
}
